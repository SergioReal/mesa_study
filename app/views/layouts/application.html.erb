<!DOCTYPE html>
<html>
  <head>
    <title>StudentSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i|Roboto:100,300,400,400i,700,700i" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>

<header>
  <div class="container">
    <% if @current_user %>
    <div class="header-left">
      <div class="mesa"><%= link_to("MESA", "/")%></div>
    </div>
    <div class="header-right">

      <ul class="home_ul">
      <li class="home_li">
        Vocabulary
        <div class="dropdown_content">
          <div class="drop_1"> <%= link_to("List", "/vocabulary/index")%></div>
          <div class="drop_2"> <%= link_to("Add", "/vocabulary/new")%></div>
        </div>
      </li>
      <li class="home_li"><%= link_to("Logout", "/logout", {method: :post})%></li>
    </div>
    <% else %>
    <div class="header-left">
      <div class="mesa"><%= link_to("MESA", "/")%></div>
    </div>
    <div class="header-right">

      <ul class="home_ul">
      <li class="home_li"><%= link_to("Log in", "/login")%></li>
    </div>
      <% end %>
  </div>
</header>



    <%= yield %>
  </body>
</html>
